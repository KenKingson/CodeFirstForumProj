                            <input asp-for="Tags" type="text" name="tags" class="form-control"
                                   value="" data-role="tagsinput" aria-hidden="true" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" id="message" class="form-control" rows="5" value=""></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="Category" asp-items="Html.GetEnumSelectList<ECategory>()" class="form-control"></select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group" hidden="hidden">
                            <label asp-for="Photo" class="control-label"></label>
                            <input asp-for="Photo" class="form-control" id="inPhoto" value="http://res.cloudinary.com/mycloud6855/image/upload/v1510241495/empty_avatar_gkgqwa.jpg" />
