@model CodeFirstForum.ViewModels.AddStepViewModel

<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Add Step</h4>  
            <div class="col-md-0">                
            </div>
            <div class="col-md-8">
                <form asp-action="AddStep">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" hidden="hidden">
                        <label asp-for="ManualId" class="control-label"></label>
                        <input asp-for="ManualId" class="form-control" value="@Model.ManualId" />
                        <span asp-validation-for="ManualId" class="text-danger"></span>
                    </div>
                        @{
                            int number = Model.Number + 1;
                        }
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" value="" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="form-control" rows="5" value=""></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group" hidden="hidden">
                        <label asp-for="Number" class="control-label"></label>
                        <input asp-for="Number" class="form-control" value="@Model.Number" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
